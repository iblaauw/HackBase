<!DOCTYPE html>
<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
	<script src="http://code.jquery.com/jquery.js"></script>
	<link rel="stylesheet" type="text/css" href="~/App_Themes/Standard Theme/stylesheet.css">
	<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
</head>
<body>
	<div class="fb-root"></div>
    <script type="text/javascript" src="~/Js/FacebookJsSDK.js"></script>
	<div class="row-fluid">
	<div id="background" class="span6 offset3">
		<div class="row">
		<div class="span5 offset4">
			<img class="logo" logo="icon" src="~/App_Themes/Standard Theme/HackBase-1.png">
		</div>
		</div>
	</div>
	</div>
	
    <div class="row-fluid">
        <div class="offset10 span2">
            <div class="fb-login-button" data-width="200"></div>
        </div>
    </div>

	<div class="row-fluid">
	<div id="main" class="span6 offset3">
        @RenderBody()

	</div>
	</div>
	
	<script src="bootstrap/js/bootstrap.min.js"></script>

</body>

</html>