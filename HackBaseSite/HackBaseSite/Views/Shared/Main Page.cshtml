<!DOCTYPE html>
<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
	<script src="http://code.jquery.com/jquery.js"></script>
    <script>
        PageUnrestricted = false;
    </script>
	<link rel="stylesheet" type="text/css" href="~/App_Themes/Standard Theme/stylesheet.css">
	<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
</head>
<body>
    <link href='http://fonts.googleapis.com/css?family=Happy+Monkey' rel='stylesheet' type='text/css'>
	<div id="fb-root"></div>
    <script type="text/javascript" src="~/Js/FacebookJsSDK.js"></script>
	<div class="row-fluid">
	<div id="background" class="span6 offset3">
		<div class="row">
		<div class="span5 offset4">
			<a href="/"><img class="logo" logo="icon" src="~/App_Themes/Standard Theme/HackBase-1.png"></a>
		</div>
		</div>
	</div>
	</div>
	
    <div class="row-fluid">
        <div class="offset5 span3">
            @using (Html.BeginForm("Search", "Search"))
            {
                <input type="text" name="text" />
                <input type="submit" value="Search" />
            }
        </div>
        <div class="offset10 span2">
            <div class="fb-login-button" data-size="xlarge" data-width="200px"></div>
        </div>
    </div>
    <div class="row">
        <div class="offset7 span3">
            @using (Html.BeginForm("Index", "CreateIdea"))
            {
                <input id="CreateButton" type="submit" value="Create a new Hack Idea"></input>
            }
        </div>
    </div>
	<div class="row-fluid">
	<div id="main" class="span6 offset3">
        @RenderBody()

	</div>
	</div>
	
	<script src="~/bootstrap/js/bootstrap.min.js"></script>

</body>

</html>